package agario;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import javax.swing.JFrame;
import javax.swing.JPanel;

public final class Blob extends GameObject implements Runnable{
	public int size = 0;
	public int score = 0;
	Handler handler;
	
	/*Basic constructor for Blob*/
	public Blob(int x, int y, ID id, Handler handler){
		super(x, y, id);
		this.handler = handler;
	}
	
	public Rectangle getBounds() {
		return new Recrangle(x, y, 50+size, 50+size);
		
	}
	
	public void tick() {
		x += speedX;
		y += speedY;
		
		x = Game.clamp(x, 0, Game.WIDTH - 50);
		y = Game.clamp(y, 0, Game.HEIGHT - 80);
	}
	
	public void render(Graphics g) {
		g.setColor(Color.black);
		g.fillOval(x, y, 50+size, 50+size);
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		
	}
}
